<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="bower_components/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="bower_components/font-awesome/css/all.min.css">
  <link rel="stylesheet" href="bower_components/font-awesome/css/fontawesome.min.css">
  <link rel="stylesheet" href="bower_components/font-awesome/css/v4-shims.min.css">
  <link rel="stylesheet" href="bower_components/sweetalert2/dist/sweetalert2.min.css">
  <link rel="stylesheet" href="bower_components/alertifyjs/css/alertify.min.css"> 
  <link rel="stylesheet" href="css/auth.css">

  <script src="bower_components/jquery/dist/jquery.min.js"></script>
  <script src="bower_components/jquery.nicescroll/jquery.nicescroll.min.js"></script>
  <script src="bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  <script src="bower_components/jquery-colorbox/jquery.colorbox-min.js"></script> 
  <script src="bower_components/alertifyjs/alertify.min.js"></script>
  <script src="bower_components/sweetalert2/dist/sweetalert2.all.min.js"></script>
  <script src="js/auth.js"></script>
  <title>Truy cập tài khoản</title>
</head>
<body>
  <div class="auth">
    <div class="loading-ring"><div></div><div></div><div></div><div></div></div>
    <div class="loading-modal"></div>
    <div id="authenticationCarousel" class="auth__carousel carousel slide" data-pause="false" data-interval="4000" data-ride="carousel">
      <div class="carousel-inner auth__carousel-inner">
        <div class="carousel-item auth__carousel-inner-item auth__carousel-inner--bg1 active"></div>
        <div class="carousel-item auth__carousel-inner-item auth__carousel-inner--bg2"></div>
        <div class="carousel-item auth__carousel-inner-item auth__carousel-inner--bg3"></div>
      </div>
    </div>
    <div class="auth-content">
      <h1 class="auth-content__title">Messenger Chat</h1>      
      <div class="table-responsive">
        <table class="table table-borderless auth-content__profile">        
          <tbody>
            <tr>
              <td class="text-right">Author</td>
              <td>MVT</td>
            </tr>
            <tr>
              <td class="text-right">Email</td>
              <td>mthang1801@gmail.com</td>            
            </tr>
            <tr>
              <td class="text-right">GitHub</td>
              <td><a href="https://github.com/mthang1801" class="text-white" target="_blank">https://github.com/mthang1801</a></td>
            </tr>
          </tbody>
        </table>                
      </div>
    </div>
    <div class="auth-link">
      <div class="auth-form__login-register-link">
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
          <li class="nav-item" style="z-index: 99;">
            <a class="nav-link btn-text" id="btn-register" data-toggle="pill" href="#register-form" role="tab" aria-controls="pills-register" aria-selected="true">Đăng ký</a>
          </li>
          <li class="nav-item disabled">
            <a class="nav-link btn-text active" id="btn-login" data-toggle="pill" href="#login-form" role="tab" aria-controls="pills-login" aria-selected="false">Đăng Nhập</a>
          </li>        
        </ul>
      </div>
      <div class="clearfix"></div>
    </div>   
    <div class="auth-form">      
      <div class="tab-content" id="tab-form">
        <!-- Show Register Form -->
        <div class="tab-pane fade" id="register-form" role="tabpanel" aria-labelledby="pills-home-tab">
         <%- include("register/register") %>
        </div>        
        <!-- Show Login Form -->
        <div class="tab-pane fade show active" id="login-form" role="tabpanel" aria-labelledby="pills-profile-tab">
          <%- include("login/login") %>
        </div>
        <!-- Show Forgot password form -->
        <div class="tab-pane fade" id="forgot-pw-form" role="tabpanel" aria-labelledby="pills-profile-tab">
          <%- include("request_restore_password/request_restore_password") %>
        </div>
      </div>
    </div>    
  </div>
  
</body>
</html>
