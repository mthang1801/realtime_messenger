                  <div class="person__config--time" data-uid="<%= conversation._id %>">
                    <%= convertToMessengerTimeStamp(conversation.msgUpdatedAt) %>
                  </div>
                </div>                 
              </a>
            </li>            
          <%}%>
        <%})%>             
      </ul> 
    </div>
    <div class="tab-pane left-side-conversations__content" id="private-conversations">
