                    <%}%>
                    <%if(getLastItemInArray(conversation.messages).messageType == "file") {%>
                      <span>Tệp đính kèm </span>
                    <%}%>
                  </div>
                </div>
                <div class="person__config" data-uid="<%= conversation._id %>">
