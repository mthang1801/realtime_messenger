<div class="section-navbar">
  <nav class="navbar navbar-expand-sm navbar-dark navigation">    
    <a class="navbar-brand navigation__brand">MVT</a>    
    <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapse_navigation" aria-controls="collapse_navigation"
      aria-expanded="false" aria-label="Toggle navigation">
    <i class="navbar-toggler-icon"></i></button>
    <div class="collapse navbar-collapse" id="collapse_navigation">            			
      <div class="col-12 col-md-6 my-0 d-flex justify-content-lg-center">			
          <div class="input-group navigation__input">
            <input type="text" class="form-control navigation__input-control" placeholder="Tìm Kiếm...">
            <span class="input-group-append">
              <button class="btn btn-light-grey navigation__input-button">
                <i class="fas fa-search"></i>
              </button>
            </span>
          </div>				
      </div>
      <div class="col-12 col-md-6">
        <ul class="navbar-nav mt-lg-0  navigation__nav justify-content-end" id="navbar-right">
          <li class="nav-item navigation__nav-item">
            <a class="nav-link  navigation__nav-link " href="#"><i class="fas fa-home"></i></a>
          </li>
          <li class="nav-item navigation__nav-item">
            <a class="nav-link  navigation__nav-link" data-toggle="modal" href="#modalContact"><i class="fas fa-user-plus"></i></a>
            <% if(usersContactReceived.length) { %>
            <span class="navigation__nav-notification-count" id="contact-count">
              <em><strong><%= countRequestContactReceived %></strong></em>
            </span>
            <%}else{%>
              <span class="navigation__nav-notification-count d-none" id="contact-count"> </span>
            <%}%>
          </li>
          <li class="nav-item navigation__nav-item" id="button-notification">
            <a class="nav-link  navigation__nav-link" href="#"><i class="fas fa-bell"></i></a>
            <%if (unreadNotifications > 0 ) { %>
            <span class="navigation__nav-notification-count" id="notification-bell-count"> 
              <em><strong><%= unreadNotifications > 99 ? "99+" : unreadNotifications %></strong></em>
            </span>
            <%}else {%>
              <span class="navigation__nav-notification-count d-none" id="notification-bell-count"></span>
            <%}%>
            <!-- notification dashboard-->
            <div class="notification" id="notification-board">
              <div class="notification__header">
                <div class="notification__header--title">
                  Thông báo
                </div>
                <div class="notification__header--link">
                  <a href="javascript:void(0);" id="btn-mark-as-read-all-notification" class="btn-link">Đánh dấu đọc Tất cả</a>
                  <a href="javascript:void(0);" id="btn-setting-notification" class="btn-link">Cài đặt</a>
                </div>
              </div>
              <hr class="hr-notification">
              <div class="notification__body" id="notification-dashboard-body">
                <ul class="card-notifications">                
                 <%if (notifications.length) { %>
                  <% notifications.forEach( notificationItem  => { %>
                    <%- notificationItem %>
                  <%})%>
                <%}%>
                </ul>
                <div class="notification-loading"><div></div><div></div><div></div><div></div></div>
              </div>
              <hr class="hr-notification">
              <div class="card-notifications__footer">
                <a  class="btn-link" data-toggle="modal" href="#modalNotificationExtense" id="see-all-notifications">Xem tất cả</a>
              </div>
            </div>
          </li>
          <li class="nav-item dropdown navigation__nav-item">
            <a class="nav-link dropdown-toggle navigation__nav-link" data-user-id="<%= user._id %>" href="javascript:void(0)" id="dropdownId" data-display="static" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <img src="images/users/<%= user.avatar %>" id="navbar-user-avatar" class="navigation__nav-image"><span class="navigation__nav-username"><%if(user.username.length > 12) {%><%= user.username.substring(0, 10)%><span>...</span><%}else{%><%= user.username %><%}%></span>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownId">
              <a class="dropdown-item" data-toggle="modal" href="#modalUserProfile"><i class="fas fa-cog"></i> Thông tin tài khoản</a>
              <a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</div>
